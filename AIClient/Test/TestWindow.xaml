<Window x:Class="LLMClient.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LLMClient"
        xmlns:test="clr-namespace:LLMClient.Test"
        xmlns:component="clr-namespace:LLMClient.UI.Component"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance test:TestWindow}"
        Title="TestWindow" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <FlowDocumentScrollViewer Document="{Binding Document,Mode=OneWay}" 
                                  MaxHeight="700"/>
        <component:MarkdownTextBlock Grid.Row="1"
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Top"
                                     Source="{Binding  Collection,Mode=OneTime}" />
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10">
            <Button Click="OK_OnClick"
                    Content="OK" />
            <Button Click="Cancel_OnClick"
                    Content="Cancel"
                    Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>