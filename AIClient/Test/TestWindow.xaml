<Window x:Class="LLMClient.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:test="clr-namespace:LLMClient.Test"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance test:TestWindow}"
        Title="TestWindow" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Source="{Binding LatexSource,Mode=OneWay}"
               Stretch="None" />
        <wpf:WebView2 Grid.Row="1"
                      x:Name="WebView2" />
        <!--<FlowDocumentScrollViewer Document="{Binding Document,Mode=OneWay}" 
                                  MaxHeight="700"/>-->
        <StackPanel Grid.Row="0">
            <controls:FormulaControl Scale="30"
                                     Formula="{Binding Formula,Mode=OneWay}" />
            <TextBox AcceptsReturn="True"
                     x:Name="FormulaInput"/>
        </StackPanel>

        <!--
        <component:MarkdownTextBlock Grid.Row="1"
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Top"
                                     Source="{Binding  Collection,Mode=OneTime}" />-->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10">
            <Button Content="选择"
                    Click="Input_OnClick"
                    Margin="10,0,0,0"/>
            <Button Content="test"
                    Margin="10,0,0,0"/>
            <Button Click="OK_OnClick"
                    Margin="10,0,0,0"
                    Content="OK" />
            <Button Click="Cancel_OnClick"
                    Content="Cancel"
                    Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>