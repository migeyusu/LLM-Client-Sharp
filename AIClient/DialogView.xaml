<UserControl x:Class="LLMClient.DialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LLMClient"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:DialogViewModel}"
             d:DesignHeight="600"
             d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <materialDesign:Card Margin="5"
                             Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding Topic,Mode=TwoWay}"
                         Style="{StaticResource MaterialDesignFilledTextBox}"
                         materialDesign:HintAssist.Hint="主题"
                         HorizontalAlignment="Left"
                         MinWidth="100" />
                <Button Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                    <TextBlock Text="{Binding SystemPromptString,Mode=OneWay}"
                               Foreground="Black"
                               Style="{StaticResource MaterialDesignBody2TextBlock}" />
                    <Button.CommandParameter>
                        <Grid MaxHeight="500"
                              MaxWidth="800"
                              Width="300"
                              Height="200"
                              Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Text="System Prompt"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"
                                       HorizontalAlignment="Left" />
                            <Button Grid.Row="0"
                                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    HorizontalAlignment="Right"
                                    Width="30"
                                    Height="30"
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="Close"
                                                             Width="20"
                                                             Height="20" />
                                </Button.Content>
                            </Button>
                            <TextBox Grid.Row="1"
                                     Text="{Binding SystemPromptString,Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     DockPanel.Dock="Right"
                                     materialDesign:HintAssist.Hint="System prompt"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     SpellCheck.IsEnabled="True" />
                        </Grid>
                    </Button.CommandParameter>
                </Button>
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Padding="10,5"
                            ToolTip="配置模型">
                        <DockPanel DataContext="{Binding Model,Mode=OneWay}">
                            <Image Source="{Binding  Icon,Mode=OneWay}" />
                            <TextBlock Text="{Binding Name,Mode=OneTime}" />
                        </DockPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Width="36"
                            Height="36"
                            ToolTip="清空对话"
                            Command="{Binding ClearDialogs}">
                        <materialDesign:PackIcon
                            Kind="Delete"
                            Width="20"
                            Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Width="36"
                            Height="36"
                            ToolTip="清空上下文"
                            Command="{Binding ClearContextCommand}">
                        <materialDesign:PackIcon
                            Kind="Autorenew"
                            Width="20"
                            Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Width="36"
                            Height="36"
                            ToolTip="导出"
                            Command="{Binding ExportCommand}">
                        <materialDesign:PackIcon
                            Kind="Export"
                            Width="20"
                            Height="20" />
                    </Button>

                    <materialDesign:ColorZone Margin="16,0,0,0"
                                              Padding="8,4,8,4"
                                              Panel.ZIndex="1"
                                              materialDesign:ElevationAssist.Elevation="Dp2"
                                              CornerRadius="6"
                                              Mode="Standard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                    Command="{Binding SearchCommand}"
                                    CommandParameter="{Binding ElementName=SearchTextBox,Path=Text,Mode=OneWay}">
                                <materialDesign:PackIcon
                                    Kind="Search"
                                    Opacity=".56" />
                            </Button>
                            <TextBox Grid.Column="1"
                                     MinWidth="120"
                                     x:Name="SearchTextBox"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"
                                     materialDesign:HintAssist.Hint="Search"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     BorderThickness="0" />
                        </Grid>
                    </materialDesign:ColorZone>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <TextBox Grid.Row="2"
                 Height="100"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="输入Prompt"
                 AcceptsReturn="True"
                 Text="{Binding  PromptString,Mode=TwoWay}"
                 IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="2"
                Command="{Binding SendRequestCommand}"
                Width="120"
                Height="30"
                Style="{StaticResource MaterialDesignFlatLightButton}"
                Content="发送"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10" />
        <ScrollViewer Grid.Row="1"
                      Margin="0,10">
            <ItemsControl Margin="0,0,5,0"
                          Background="Wheat"
                          ItemsSource="{Binding Dialog,Mode=OneWay}">
                <ItemsControl.Resources>
                    <DataTemplate DataType="{x:Type local:RequestItem}">
                        <materialDesign:Card Padding="8"
                                             Margin="0,10,0,0"
                                             HorizontalAlignment="Right"
                                             Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <TextBlock Text="{Binding MessageContent,Mode=OneTime}" />
                        </materialDesign:Card>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:ResponseItem}">
                        <materialDesign:Card Padding="8"
                                             Margin="0,10"
                                             Style="{StaticResource MaterialDesignOutlinedCard}">
                            <RichTextBox IsDocumentEnabled="True"
                                         local:RichTextBoxHelper.DocumentXaml="{Binding Document,Mode=OneTime}" />
                        </materialDesign:Card>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:EraseItem}">
                        <TextBlock Text="上下文已清除"
                                   Height="30"
                                   HorizontalAlignment="Stretch"
                                   Style="{DynamicResource MaterialDesignSubtitle2TextBlock}" />
                    </DataTemplate>
                </ItemsControl.Resources>
            </ItemsControl>
        </ScrollViewer>

        <materialDesign:Card Grid.Row="1"
                             Padding="6"
                             Margin="0,5"
                             Visibility="{Binding Model.IsResponsing,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}"
                             materialDesign:ElevationAssist.Elevation="Dp12"
                             Style="{StaticResource MaterialDesignOutlinedCard}">
            <ScrollViewer>
                <TextBlock Text="{Binding Model.PreResponse,Mode=OneWay}"
                           Foreground="Black"
                           HorizontalAlignment="Stretch"
                           TextWrapping="Wrap" />
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>


</UserControl>