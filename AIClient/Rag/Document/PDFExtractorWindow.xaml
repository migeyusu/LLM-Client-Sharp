<Window x:Class="LLMClient.Rag.Document.PDFExtractorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LLMClient.Rag.Document"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:log="clr-namespace:LLMClient.UI.Log"
        xmlns:content="clr-namespace:UglyToad.PdfPig.Content;assembly=UglyToad.PdfPig"
        xmlns:converters="clr-namespace:LLMClient.UI.Component.Converters"
        mc:Ignorable="d"
        Loaded="PDFExtractorWindow_OnLoaded"
        d:DataContext="{d:DesignInstance local:PDFExtractorViewModel}"
        Title="{Binding Title,Mode=OneWay}" Height="850" Width="1000">
    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type local:PDFNode}"
                                  ItemsSource="{Binding Children}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <TextBlock Margin="10,0"
                               MaxWidth="500"
                               Text="{Binding Title,Mode=OneTime}"
                               TextWrapping="NoWrap"
                               TextTrimming="CharacterEllipsis"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                    <TextBlock Style="{StaticResource MaterialDesignHeadline6TextBlock}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="- L{0} (StartPage {1})">
                                <Binding Path="Level" />
                                <Binding Path="StartPage" Mode="OneTime" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
                <TextBlock Grid.Row="1"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"
                           Background="{DynamicResource MaterialDesign.Brush.TextBox.FilledBackground}"
                           Visibility="{Binding Summary,Mode=OneWay,Converter={x:Static converters:SnapConverters.StringToVisibilityConverter}}">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Invalidate Summary"
                                      ToolTip="Clear the summary in cache and regenerate it."
                                      Command="Refresh"
                                      CommandParameter="{Binding }" />
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                    <Run Text="Summary:"
                         FontWeight="Black" />
                    <LineBreak />
                    <Run Text="{Binding Summary,Mode=OneWay}" />
                </TextBlock>
                <ScrollViewer Grid.Row="2"
                              Margin="30,0,0,0"
                              HorizontalAlignment="Stretch"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ContentUnits,Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:PDFPage}">
                                <StackPanel Orientation="Vertical"
                                            Margin="0,5,0,5">
                                    <TextBox Text="{Binding  Content,Mode=OneTime}"
                                             MaxHeight="300"
                                             VerticalScrollBarVisibility="Auto"
                                             TextAlignment="Left"
                                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                             BorderThickness="0" />
                                    <ItemsControl ItemsSource="{Binding PdfImages,Mode=OneTime}"
                                                  ItemsPanel="{StaticResource HorizontalItemsPanelTemplate}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type content:IPdfImage}">
                                                <Image Stretch="UniformToFill"
                                                       Source="{Binding Converter={x:Static converters:SnapConverters.PdfImageConverter}}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <Separator Grid.Row="1"
                           Background="Black"
                           VerticalAlignment="Top"
                           Margin="10,0" />
            </Grid>
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Grid>
        <materialDesign:Transitioner SelectedIndex="{Binding CurrentStep,Mode=TwoWay}">
            <materialDesign:TransitionerSlide>
                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Right" />
                </materialDesign:TransitionerSlide.ForwardWipe>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.RowSpan="2"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Stretch"
                                  Background="DarkGray"
                                  Margin="0,30"
                                  Width="3" />
                    <!-- 左侧控制面板 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                        <TextBlock Text="选择页面:" Margin="0,20,0,0" />
                        <ComboBox ItemsSource="{Binding Pages,Mode=OneTime}"
                                  SelectedIndex="{Binding SelectedPageIndex,Mode=TwoWay}" />
                        <TextBlock Text="Top Margin (点):" Margin="0,20,0,0" />
                        <TextBox Text="{Binding TopMargin,Mode=TwoWay}" />
                        <TextBlock Text="Bottom Margin (点):" />
                        <TextBox Text="{Binding BottomMargin,Mode=TwoWay}" />
                        <TextBlock Text="Left Margin (点):" />
                        <TextBox Text="{Binding LeftMargin,Mode=TwoWay}" />
                        <TextBlock Text="Right Margin (点):" />
                        <TextBox Text="{Binding RightMargin,Mode=TwoWay}" />
                        <!--<TextBlock Text="Gamma:" />
                        <Slider Minimum="0.1" Maximum="3.0" Value="{Binding Gamma,Mode=TwoWay}"
                                TickFrequency="0.1"
                                IsSnapToTickEnabled="True" />
                        <TextBlock Text="{Binding Gamma,Mode=OneWay, StringFormat='{}{0:F2}'}"
                                   HorizontalAlignment="Center" />

                        <TextBlock Text="Contrast:" Margin="0,10,0,0" />
                        <Slider Minimum="0.0" Maximum="3.0" Value="{Binding Contrast,Mode=TwoWay}"
                                TickFrequency="0.1"
                                IsSnapToTickEnabled="True" />
                        <TextBlock Text="{Binding Contrast,Mode=OneWay, StringFormat='{}{0:F2}'}"
                                   HorizontalAlignment="Center" />

                        <TextBlock Text="Saturation:" Margin="0,10,0,0" />
                        <Slider Minimum="0.0" Maximum="3.0" Value="{Binding Saturation,Mode=TwoWay}"
                                TickFrequency="0.1"
                                IsSnapToTickEnabled="True" />
                        <TextBlock Text="{Binding Saturation, Mode=OneWay, StringFormat='{}{0:F2}'}"
                                   HorizontalAlignment="Center" />-->
                        <Button Content="下一步"
                                Margin="0,20,0,0"
                                Command="{x:Static materialDesign:Transitioner.MoveNextCommand}" />
                    </StackPanel>
                    <materialDesign:DialogHost Grid.Column="1"
                                               DialogClosed="DialogHost_OnDialogClosed">
                        <TreeView ItemsSource="{Binding StructNodes,Mode=OneTime}"
                                  SelectedItemChanged="NodeTreeView_OnSelectedItemChanged">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem"
                                       BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                    <Setter Property="materialDesign:TreeViewAssist.ExpanderSize"
                                            Value="20" />
                                    <Setter Property="MinHeight"
                                            Value="30" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type local:PDFNode}"
                                                          ItemsSource="{Binding Children,Mode=OneTime}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="BookmarkOutline"
                                                                 Width="20"
                                                                 Height="20"
                                                                 VerticalAlignment="Center" />
                                        <TextBlock VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0,0,0"
                                                   MaxWidth="250">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} (Start {1})">
                                                    <Binding Path="Title" Mode="OneTime" />
                                                    <Binding Path="StartPoint" Mode="OneWay" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Margin="10,0,0,0"
                                                Width="30"
                                                Height="30"
                                                Content="{materialDesign:PackIcon Kind=EditBoxOutline,Size=20}"
                                                Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                        <materialDesign:DialogHost.Resources>
                            <DataTemplate DataType="{x:Type local:PDFNode}">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Revise Node StartPoint" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,0,0">
                                        <TextBlock Text="X："
                                                   VerticalAlignment="Center" />
                                        <TextBox Margin="0,0,8,0"
                                                 Padding="6,3"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                 BorderThickness="0"
                                                 Text="{Binding StartPointX,Mode=TwoWay}"
                                                 Style="{StaticResource MaterialDesignFilledTextBox}" />
                                        <TextBlock Text="Y："
                                                   VerticalAlignment="Center" />
                                        <TextBox Margin="0,0,0,0"
                                                 Padding="6,3"
                                                 BorderThickness="0"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                 Text="{Binding StartPointY,Mode=TwoWay}"
                                                 Style="{StaticResource MaterialDesignFilledTextBox}" />
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right"
                                                Orientation="Horizontal"
                                                Margin="0,10,0,0">
                                        <Button Margin="0,0,8,0"
                                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                                Content="ACCEPT"
                                                IsDefault="True"
                                                CommandParameter="True"
                                                Style="{StaticResource MaterialDesignFlatButton}" />
                                        <Button Margin="0,0,0,0"
                                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                                Content="CANCEL"
                                                IsCancel="True"
                                                CommandParameter="False"
                                                Style="{StaticResource MaterialDesignFlatButton}" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </materialDesign:DialogHost.Resources>
                    </materialDesign:DialogHost>
                    <!-- 右侧Canvas用于渲染 -->
                    <ScrollViewer Grid.Column="2"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  x:Name="ScrollViewerPage"
                                  Margin="10">
                        <Canvas x:Name="CanvasPage" Background="White" MouseWheel="CanvasPage_MouseWheel">
                            <Canvas.RenderTransform>
                                <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1" />
                            </Canvas.RenderTransform>
                        </Canvas>
                    </ScrollViewer>
                </Grid>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:CircleWipe />
                </materialDesign:TransitionerSlide.BackwardWipe>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TreeView ItemsSource="{Binding ContentNodes,Mode=OneWay}" />
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="10"
                                IsEnabled="{Binding IsProcessing,Mode=OneWay,Converter={StaticResource InvertBooleanConverter}}">
                        <ComboBox materialDesign:HintAssist.Hint="选择语言"
                                  SelectedIndex="{Binding  SummaryLanguageIndex,Mode=TwoWay}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="英文" />
                                <ComboBoxItem Content="中文" />
                            </ComboBox.Items>
                        </ComboBox>
                        <Button Content="返回"
                                Width="120"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                        <Button Content="清空Prompt缓存"
                                Command="{Binding ClearCacheCommand}" />
                        <Button Content="下一步"
                                Margin="10,0,0,0"
                                Command="{x:Static materialDesign:Transitioner.MoveNextCommand}" />
                    </StackPanel>
                </Grid>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:CircleWipe />
                </materialDesign:TransitionerSlide.BackwardWipe>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TreeView ItemsSource="{Binding ContentNodes,Mode=OneWay}">
                        <TreeView.CommandBindings>
                            <CommandBinding Command="Refresh"
                                            Executed="RefreshCommandBinding_OnExecuted" />
                        </TreeView.CommandBindings>
                    </TreeView>
                    <StackPanel Grid.Row="1"
                                Margin="0,10,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding IsProcessing,Mode=OneWay,Converter={StaticResource InvertBooleanConverter}}">
                        <materialDesign:PopupBox ToolTip="查看构建日志"
                                                 ToggleContent="{materialDesign:PackIcon Kind=InformationOutline,Size=21}"
                                                 ToggleCheckedContent="{materialDesign:PackIcon Kind=InformationVariant,Size=21}"
                                                 Margin="0,0,0,0"
                                                 VerticalAlignment="Center"
                                                 PopupContent="{Binding  Logs,Mode=OneTime}">
                            <materialDesign:PopupBox.PopupContentTemplate>
                                <DataTemplate DataType="{x:Type log:LogsViewModel}">
                                    <HeaderedContentControl>
                                        <HeaderedContentControl.Header>
                                            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                                       Margin="16,8">
                                                构建日志
                                            </TextBlock>
                                        </HeaderedContentControl.Header>
                                        <log:LogView Width="550"
                                                     Height="300" />
                                    </HeaderedContentControl>
                                </DataTemplate>
                            </materialDesign:PopupBox.PopupContentTemplate>
                        </materialDesign:PopupBox>
                        <Button Content="返回"
                                Width="120"
                                VerticalAlignment="Center"
                                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                        <Button Content="接受"
                                IsEnabled="{Binding IsSummaryFailed,Converter={StaticResource InvertBooleanConverter}}"
                                Margin="10,0,0,0"
                                Click="OK_OnClick"
                                Width="120" />
                    </StackPanel>
                </Grid>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
        <materialDesign:Card UniformCornerRadius="10"
                             Visibility="{Binding IsProcessing,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center">
            <StackPanel Margin="30">
                <ProgressBar IsIndeterminate="True"
                             Maximum="1"
                             Minimum="0"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="{Binding ProgressValue,Mode=OneWay}" />
                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           Text="正在处理" />
                <Button HorizontalAlignment="Center"
                        Margin="0,5,0,0"
                        Visibility="{Binding CanCancel,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding CancelCommand}"
                        Content="CANCEL"
                        Style="{StaticResource MaterialDesignFlatButton}" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>