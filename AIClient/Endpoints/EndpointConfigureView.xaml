<UserControl x:Class="LLMClient.Endpoints.EndpointConfigureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:LLMClient.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:azure="clr-namespace:LLMClient.Endpoints.Azure"
             xmlns:endpoints="clr-namespace:LLMClient.Endpoints"
             xmlns:openAiapi="clr-namespace:LLMClient.Endpoints.OpenAIAPI"
             xmlns:abstraction="clr-namespace:LLMClient.Abstraction"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance endpoints:EndpointConfigureViewModel}"
             d:DesignHeight="500" d:DesignWidth="600"
             x:Name="ControlRoot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           MaxHeight="200" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--Style="{StaticResource MaterialDesignChoiceChipListBox}"-->
        <Grid Margin="12,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <materialDesign:PopupBox Grid.Column="0"
                                     Margin="5"
                                     ToolTip="添加新的API"
                                     ToolTipService.InitialShowDelay="0"
                                     PlacementMode="BottomAndAlignCentres"
                                     VerticalAlignment="Center"
                                     materialDesign:ElevationAssist.Elevation="Dp4"
                                     Width="30"
                                     Height="30"
                                     Style="{StaticResource MaterialDesignMultiFloatingActionSecondaryPopupBox}">
                <materialDesign:PopupBox.ToggleCheckedContent>
                    <materialDesign:PackIcon Width="20"
                                             Height="20"
                                             Kind="Pencil"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center" />
                </materialDesign:PopupBox.ToggleCheckedContent>
                <StackPanel>
                    <Button ToolTip="OpenAI API兼容"
                            Margin="10"
                            materialDesign:ElevationAssist.Elevation="Dp4"
                            Command="{Binding AddNewEndpointCommand}">
                        <Button.Content>
                            <materialDesign:PackIcon Kind="Api"
                                                     Foreground="White"
                                                     Width="23"
                                                     Height="23" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </materialDesign:PopupBox>
            <ListBox Grid.Column="1"
                     Margin="10"
                     ItemsSource="{Binding Endpoints,Mode=OneWay}"
                     SelectionMode="Single"
                     Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}"
                     SelectedItem="{Binding SelectedEndpoint,Mode=OneWayToSource}"
                     MaxHeight="120"
                     BorderBrush="DarkGray"
                     BorderThickness="0,0,0,1">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type abstraction:ILLMEndpoint}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="20"
                                   Height="20"
                                   Source="{Binding Icon,Mode=OneWay}" />
                            <TextBlock Text="{Binding DisplayName,Mode=OneWay}"
                                       MaxWidth="120"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center" />
                            <Button Width="18"
                                    Height="18"
                                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox},Path=DataContext.RemoveEndPointCommand}"
                                    CommandParameter="{Binding  }"
                                    Margin="6,0,0,0"
                                    VerticalAlignment="Center"
                                    ToolTip="删除当前"
                                    Visibility="{Binding  IsInbuilt,Mode=OneTime,Converter={x:Static materialDesign:BooleanToVisibilityConverter.NotCollapsedInstance}}"
                                    Template="{StaticResource ItemDeleteButtonTemplate}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <Button Grid.Column="2"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="5" />
        </Grid>
        <ContentControl Grid.Row="1"
                        Margin="16,0,16,5"
                        Padding="0"
                        Content="{Binding SelectedEndpoint,Mode=OneWay}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type azure:GithubCopilotEndPoint}">
                    <azure:GithubCopilotEndPointView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type openAiapi:APIEndPoint}">
                    <openAiapi:APIEndPointView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
        <Separator Grid.Row="2"
                   Background="Black"
                   VerticalAlignment="Top"
                   Margin="10,0" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <TextBlock Text="Suggestion:"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0" />
                <materialDesign:PopupBox Padding="2,0"
                                         StaysOpen="True"
                                         Margin="10,0,0,0"
                                         VerticalAlignment="Center"
                                         ToolTip="添加suggestion"
                                         Style="{StaticResource MaterialDesignToolPopupBox}"
                                         PopupContentTemplate="{StaticResource  PopupSelectModelDataTemplate}"
                                         PopupContent="{Binding   PopupSelectViewModel,Mode=OneTime}">
                    <materialDesign:PopupBox.ToggleContent>
                        <Border Width="23"
                                Height="23"
                                Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                CornerRadius="11">
                            <materialDesign:PackIcon Kind="Add"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
                        </Border>
                    </materialDesign:PopupBox.ToggleContent>
                </materialDesign:PopupBox>
            </StackPanel>
            <ScrollViewer Grid.Column="1"
                          Margin="6,0"
                          Style="{StaticResource HorizontalArrowScrollViewer}">
                <ItemsControl VerticalAlignment="Center"
                              ItemsSource="{Binding SuggestedModels,Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel IsItemsHost="True"
                                        CanHorizontallyScroll="True"
                                        CanVerticallyScroll="False"
                                        Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type endpoints:SuggestedModel}">
                            <materialDesign:Chip IsDeletable="True"
                                                 MaxWidth="180"
                                                 Height="30"
                                                 Margin="0"
                                                 Padding="5,0"
                                                 ToolTipService.InitialShowDelay="0"
                                                 IconBackground="White"
                                                 ToolTip="{Binding LlmModel.Endpoint.DisplayName,Mode=OneTime}"
                                                 DeleteCommand="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl},Path=DataContext.RemoveSuggestedModelCommand}"
                                                 Content="{Binding LlmModel.Name,Mode=OneTime}">
                                <materialDesign:Chip.Icon>
                                    <Image Source="{Binding LlmModel.Icon.CurrentSource,Mode=OneWay}" 
                                           Width="26"
                                           Height="26"/>
                                </materialDesign:Chip.Icon>
                            </materialDesign:Chip>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <StackPanel Grid.Column="2"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Separator VerticalAlignment="Stretch"
                           Width="2"
                           Background="Gray"
                           Margin="0"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button Content="重置"
                        Margin="10,0,0,0"
                        Command="{Binding ReloadCommand}" />
                <Button Content="保存全部"
                        Margin="10,0,0,0"
                        Command="{Binding SaveAllCommand}"
                        CommandParameter="{Binding ElementName=ControlRoot}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>