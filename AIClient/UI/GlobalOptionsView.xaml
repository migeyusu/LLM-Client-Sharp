<UserControl x:Class="LLMClient.UI.GlobalOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ui="clr-namespace:LLMClient.UI"
             xmlns:dialog="clr-namespace:LLMClient.Dialog"
             xmlns:project="clr-namespace:LLMClient.Project"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance ui:GlobalOptions}"
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Padding="8">
            <TabItem Header="总结">
                <StackPanel>
                    <TextBlock Text="上下文总结Prompt：" />
                    <TextBox Text="{Binding TokenSummarizePromptString}"
                             Margin="0,10,0,0"
                             MaxHeight="200"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             Style="{StaticResource MaterialDesignFilledTextBox}" />
                    <DockPanel HorizontalAlignment="Left"
                               Margin="0,10,0,0">
                        <TextBlock Text="上下文总结大小："
                                   VerticalAlignment="Center" />
                        <TextBox materialDesign:TextFieldAssist.SuffixText="词"
                                 Width="60"
                                 Margin="5,0,0,0"
                                 Text="{Binding SummarizeWordsCount,Mode=TwoWay}" />
                    </DockPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Text="上下文总结Model："
                                   VerticalAlignment="Center" />
                        <materialDesign:PopupBox Padding="0"
                                                 StaysOpen="True"
                                                 Margin="10,0"
                                                 VerticalAlignment="Center"
                                                 ToolTip="添加suggestion"
                                                 Style="{StaticResource MaterialDesignToolPopupBox}"
                                                 PopupContentTemplate="{StaticResource  PopupSelectModelDataTemplate}"
                                                 PopupContent="{Binding   PopupSelectViewModel,Mode=OneTime}">
                            <materialDesign:PopupBox.ToggleContent>
                                <Border Width="23"
                                        Height="23"
                                        Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                        CornerRadius="11">
                                    <materialDesign:PackIcon Kind="Edit"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Center"
                                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
                                </Border>
                            </materialDesign:PopupBox.ToggleContent>
                        </materialDesign:PopupBox>
                        <TextBlock Text="{Binding SummarizeModelPersistModel,Mode=OneWay}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="1">
                        <Button Click="ImportEndpoints_OnClick"
                                Content="导入Endpoints"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,0,0" />
                        <Button Content="打开对话存储"
                                Command="{x:Static ui:CommonCommands.OpenFolderCommand}"
                                CommandParameter="{x:Static dialog:DialogFileViewModel.SaveFolderPath}"
                                Margin="20,0,0,0"
                                Style="{StaticResource MaterialDesignOutlinedButton}" />
                        <Button Content="打开工程存储"
                                Command="{x:Static ui:CommonCommands.OpenFolderCommand}"
                                CommandParameter="{x:Static project:ProjectViewModel.SaveFolderPath}"
                                Margin="20,0,0,0"
                                Style="{StaticResource MaterialDesignOutlinedButton}" />
                    </WrapPanel>
                </Grid>

            </TabItem>
            <TabItem Header="Google Search">
                <StackPanel DataContext="{Binding GoogleSearchOption,Mode=OneTime}">
                    <TextBlock Text="Google Search API Key：" />
                    <TextBox Text="{Binding ApiKey,Mode=TwoWay}"
                             Margin="0,10,0,0"
                             Style="{StaticResource MaterialDesignFilledTextBox}" />
                    <TextBlock Text="Google Search Engine ID："
                               Margin="0,10,0,0" />
                    <TextBox Text="{Binding SearchEngineId,Mode=TwoWay}"
                             Margin="0,10,0,0"
                             Style="{StaticResource MaterialDesignFilledTextBox}" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Rag">
                <StackPanel DataContext="{Binding RagOption,Mode=OneTime}">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Text="Embedding"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Endpoint:"
                                   Margin="20,0,0,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        <ComboBox ItemsSource="{Binding EndpointService.AvailableEndpoints,Mode=OneWay}"
                                  SelectedItem="{Binding EmbeddingEndpoint,Mode=TwoWay}"
                                  Style="{StaticResource MaterialDesignFilledComboBox}"
                                  DisplayMemberPath="DisplayName"
                                  MinWidth="120"
                                  Margin="12,0,0,0" />
                        <TextBlock Text="Model Id:"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        <TextBox Text="{Binding EmbeddingModelId, Mode=TwoWay}"
                                 Margin="12,0,0,0"
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 Width="180" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Text="Summarization"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   VerticalAlignment="Center" />
                        <materialDesign:PopupBox Padding="2,0"
                                                 StaysOpen="True"
                                                 Margin="10,0,0,0"
                                                 VerticalAlignment="Center"
                                                 ToolTip="添加suggestion"
                                                 Style="{StaticResource MaterialDesignToolPopupBox}"
                                                 PopupContentTemplate="{StaticResource  PopupSelectModelDataTemplate}"
                                                 PopupContent="{Binding   SelectionViewModel,Mode=OneTime}">
                            <materialDesign:PopupBox.ToggleContent>
                                <Border Width="23"
                                        Height="23"
                                        Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                        CornerRadius="11">
                                    <materialDesign:PackIcon Kind="Edit"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Center"
                                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
                                </Border>
                            </materialDesign:PopupBox.ToggleContent>
                        </materialDesign:PopupBox>
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}终结点：{0} 模型：{1}">
                                    <Binding Path="DigestClientPersist.EndPointName" Mode="TwoWay" />
                                    <Binding Path="DigestClientPersist.ModelName" Mode="OneWay" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Text="DbConnection："
                               Margin="0,10,0,0" />
                    <Grid Margin="0,10,0,0">
                        <TextBox Text="{Binding DBConnection,Mode=TwoWay}"
                                 Style="{StaticResource MaterialDesignFilledTextBox}" />
                        <Button Content="{materialDesign:PackIcon Kind=DatabasePlus}"
                                Margin="0,0,10,0"
                                Width="28"
                                Height="28"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Command="{Binding SelectDatabaseCommand}"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" />
                    </Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="APIParallelism：" />
                        <TextBox Text="{Binding MaxDigestParallelism,Mode=TwoWay}"
                                 Width="80" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Margin="10">
            <!--<Button Click="ClearHttpCache_OnClick"
                    Content="清空HTTP缓存"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="20,0,0,0" />-->
            <Button Command="{Binding SaveCommand}"
                    Margin="20,0,0,0"
                    Content="保存"
                    Width="80" />
        </StackPanel>
    </Grid>
</UserControl>