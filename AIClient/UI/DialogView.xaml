<UserControl x:Class="LLMClient.UI.DialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LLMClient"
             xmlns:ui="clr-namespace:LLMClient.UI"
             xmlns:models="clr-namespace:LLMClient.Azure.Models"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance ui:DialogViewModel}"
             d:DesignHeight="600"
             d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <materialDesign:Card Margin="5"
                             Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding Topic,Mode=TwoWay}"
                         Style="{StaticResource MaterialDesignFilledTextBox}"
                         materialDesign:HintAssist.Hint="主题"
                         HorizontalAlignment="Left"
                         MaxHeight="40"
                         Padding="6,10,6,0"
                         VerticalScrollBarVisibility="Auto"
                         MinWidth="100"
                         MaxWidth="300"
                         TextWrapping="Wrap" />
                <ContentControl Grid.Column="1"
                                Content="{Binding Model,Mode=OneWay}">
                    <ContentControl.ContentTemplateSelector>
                        <local:TypeBasedDataTemplateSelector>
                            <local:TypeBasedDataTemplateSelector.EmptyTemplate>
                                <DataTemplate DataType="{x:Type models:AzureModelBase}" />
                            </local:TypeBasedDataTemplateSelector.EmptyTemplate>
                            <local:DataTemplateTypePair>
                                <local:DataTemplateTypePair.Template>
                                    <DataTemplate DataType="{x:Type models:AzureTextModelBase}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Foreground="Black"
                                                       TextWrapping="NoWrap"
                                                       VerticalAlignment="Center"
                                                       Padding="16,0"
                                                       MaxHeight="{Binding RelativeSource={RelativeSource Self},Path=LineHeight,Mode=OneTime}"
                                                       TextTrimming="WordEllipsis"
                                                       Text="{Binding SystemPrompt,Mode=OneWay,StringFormat=System Prompt：{0},TargetNullValue=System Prompt为空}"
                                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                                            <TextBlock Grid.Column="1"
                                                       MaxWidth="200"
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Right"
                                                       Margin="16,0"
                                                       VerticalAlignment="Center"
                                                       Style="{StaticResource MaterialDesignOverlineTextBlock}">
                                                <TextBlock.Text>
                                                    <MultiBinding
                                                        StringFormat="PromptTokens:{0}, CompletionTokens:{1}, TotalTokens:{2}">
                                                        <Binding Path="PromptTokens" />
                                                        <Binding Path="CompletionTokens" />
                                                        <Binding Path="TotalTokens" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </local:DataTemplateTypePair.Template>
                            </local:DataTemplateTypePair>
                        </local:TypeBasedDataTemplateSelector>
                    </ContentControl.ContentTemplateSelector>
                </ContentControl>
                <!--<Button Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                    <Button.CommandParameter>
                    </Button.CommandParameter>
                </Button>-->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            CommandParameter="{Binding Model,Mode=OneWay}"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Background="White"
                            Margin="0,0,10,0"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Padding="10,5"
                            ToolTip="配置模型">
                        <DockPanel DataContext="{Binding Model,Mode=OneWay}">
                            <Image Source="{Binding  Icon,Mode=OneWay}"
                                   Width="20"
                                   Height="20" />
                            <TextBlock Text="{Binding Name,Mode=OneTime}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0" />
                        </DockPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="model信息"
                            Width="36"
                            Height="36"
                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            CommandParameter="{Binding Model.Info,Mode=OneWay}">
                        <materialDesign:PackIcon Kind="InformationOutline"
                                                 Width="20"
                                                 Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Width="36"
                            Height="36"
                            ToolTip="清空对话"
                            Command="{Binding ClearDialog}">
                        <materialDesign:PackIcon
                            Kind="Delete"
                            Width="20"
                            Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Width="36"
                            Height="36"
                            ToolTip="清空上下文"
                            Command="{Binding ClearContextCommand}">
                        <materialDesign:PackIcon
                            Kind="Autorenew"
                            Width="20"
                            Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Width="36"
                            Height="36"
                            ToolTip="导出为Markdown"
                            Command="{Binding ExportCommand}">
                        <materialDesign:PackIcon
                            Kind="Export"
                            Width="20"
                            Height="20" />
                    </Button>

                    <materialDesign:ColorZone Margin="16,0,0,0"
                                              Padding="8,4,8,4"
                                              Panel.ZIndex="1"
                                              materialDesign:ElevationAssist.Elevation="Dp2"
                                              CornerRadius="6"
                                              Mode="Standard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                    Command="{Binding SearchCommand}"
                                    CommandParameter="{Binding ElementName=SearchTextBox,Path=Text,Mode=OneWay}">
                                <materialDesign:PackIcon
                                    Kind="Search"
                                    Opacity=".56" />
                            </Button>
                            <TextBox Grid.Column="1"
                                     MinWidth="120"
                                     x:Name="SearchTextBox"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"
                                     materialDesign:HintAssist.Hint="Search"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     BorderThickness="0" />
                        </Grid>
                    </materialDesign:ColorZone>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <TextBox Grid.Row="2"
                 Height="100"
                 materialDesign:HintAssist.Hint="输入Prompt"
                 materialDesign:HintAssist.HelperText="{Binding  PromptTokensCount,Mode=OneWay}"
                 AcceptsReturn="True"
                 Margin="0,10,0,0"
                 Text="{Binding  PromptString,Mode=TwoWay}"
                 IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="2"
                Command="{Binding SendRequestCommand}"
                Width="120"
                Height="30"
                Style="{StaticResource MaterialDesignFlatLightButton}"
                Content="发送"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10" />
        <!--<ScrollViewer Grid.Row="1"
                      x:Name="ScrollViewer"
                      Margin="0,10"
                      Background="White">-->
        <ListBox Grid.Row="1"
                 x:Name="DialogListBox"
                 Margin="0,0,5,0"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 VirtualizingPanel.CacheLengthUnit="Item"
                 VirtualizingPanel.CacheLength="5"
                 VirtualizingPanel.ScrollUnit="Pixel"
                 VirtualizingPanel.IsContainerVirtualizable="True"
                 materialDesign:ListBoxItemAssist.ShowSelection="False"
                 ui:AutoScrollIntoView.ScrollToItem="{Binding  ScrollViewItem,Mode=OneWay}"
                 ItemsSource="{Binding Dialog,Mode=OneWay}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <ui:CustomVirtualizingStackPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}"
                       BasedOn="{StaticResource MaterialDesignListBoxItem}">
                    <Setter Property="Padding"
                            Value="0" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type ui:RequestViewItem}">
                    <materialDesign:Card Padding="8"
                                         Margin="0,10,0,0"
                                         HorizontalAlignment="Right"
                                         BorderThickness="0"
                                         Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                         Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                        <TextBlock Text="{Binding MessageContent,Mode=OneTime}" />
                    </materialDesign:Card>
                </DataTemplate>
                <DataTemplate DataType="{x:Type ui:ResponseViewItem}">
                    <materialDesign:Card Padding="8"
                                         Margin="0,10"
                                         BorderThickness="0"
                                         Style="{StaticResource MaterialDesignOutlinedCard}">
                        <StackPanel>
                            <RichTextBox BorderThickness="0"
                                         IsDocumentEnabled="True"
                                         Visibility="{Binding Document,Converter={x:Static materialDesign:NullableToVisibilityConverter.CollapsedInstance},Mode=OneTime}"
                                         local:RichTextBoxHelper.DocumentXaml="{Binding Document,Mode=OneTime}" />
                            <!--   -->
                            <TextBlock Text="{Binding ErrorMessage,Mode=OneTime}"
                                       Visibility="{Binding IsInterrupt,Mode=OneTime,Converter={x:Static materialDesign:BooleanToVisibilityConverter.CollapsedInstance}}" />
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
                <DataTemplate DataType="{x:Type ui:EraseViewItem}">
                    <Grid Height="30">
                        <Separator HorizontalAlignment="Stretch"
                                   Height="1"
                                   Foreground="Black" />
                        <TextBlock Text="上下文已清除"
                                   Background="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource MaterialDesignSubtitle2TextBlock}" />
                    </Grid>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
        <!-- </ScrollViewer> -->

        <materialDesign:Card Grid.Row="1"
                             Padding="6"
                             Margin="26,26,36,26"
                             d:IsHidden="True"
                             Visibility="{Binding Model.IsResponsing,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}"
                             materialDesign:ElevationAssist.Elevation="Dp12"
                             Style="{StaticResource MaterialDesignOutlinedCard}">
            <GroupBox BorderThickness="0"
                      Header="正在生成文档。。。。。">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Model.PreResponse,Mode=OneWay}"
                                  Background="Wheat"
                                  Padding="16">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </materialDesign:Card>
    </Grid>
</UserControl>