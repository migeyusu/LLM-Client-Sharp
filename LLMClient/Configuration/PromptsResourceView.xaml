<UserControl x:Class="LLMClient.Configuration.PromptsResourceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:configuration="clr-namespace:LLMClient.Configuration"
             xmlns:converters="clr-namespace:LLMClient.Component.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance configuration:PromptsResourceViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox Margin="10"
                 SelectionMode="Single"
                 VirtualizingPanel.IsVirtualizing="False"
                 ScrollViewer.CanContentScroll="False"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Left"
                 SelectedItem="{Binding SelectedPrompt,Mode=TwoWay}"
                 ItemsSource="{Binding Prompts,Mode=OneWay}"
                 MouseDoubleClick="ListBox_OnMouseDoubleClick"
                 ItemTemplate="{StaticResource PromptDataTemplate}" />
        <TextBox Grid.Row="1"
                 IsEnabled="{Binding SelectedPrompt,Mode=OneWay,Converter={x:Static converters:SnapConverters.NullToBooleanConverter}}"
                 materialDesign:HintAssist.Hint="请输入Title"
                 Text="{Binding  SelectedPrompt.Title,Mode=TwoWay}"
                 Margin="0,10,0,0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <TextBox Grid.Row="2"
                 MaxHeight="200"
                 MinHeight="100"
                 Margin="0,10,0,0"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap"
                 IsEnabled="{Binding SelectedPrompt,Mode=OneWay,Converter={x:Static converters:SnapConverters.NullToBooleanConverter}}"
                 Text="{Binding  SelectedPrompt.Prompt,Mode=TwoWay}"
                 materialDesign:HintAssist.Hint="请输入Prompt"
                 Style="{StaticResource MaterialDesignFilledTextBox}" />
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            <Button Content="移除"
                    Command="{Binding RemoveCommand}" />
            <Button Content="新建"
                    Margin="10,0,0,0"
                    Command="{Binding NewPromptCommand}" />
            <Button Content="保存"
                    Margin="10,0,0,0"
                    Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</UserControl>