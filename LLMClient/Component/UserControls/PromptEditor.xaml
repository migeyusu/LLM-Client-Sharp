<UserControl x:Class="LLMClient.Component.UserControls.PromptEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:userControls="clr-namespace:LLMClient.Component.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance userControls:PromptEditor}"
             x:Name="Root">
    <!--Source="{Binding  Source={StaticResource PromptsResource},Path=SystemPrompts, Mode=OneWay}"-->
    <UserControl.Resources>
        <HeaderedContentControl x:Key="HeaderedContentControl"
                                Style="{StaticResource DialogContentControlStyle}"
                                Header="{Binding Header,Mode=OneTime}"
                                Width="600">
            <Grid>
                <TextBox Text="{Binding PromptString,Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                         MaxHeight="300"
                         Height="200"
                         SpellCheck.IsEnabled="True"
                         Style="{StaticResource InputBoxStyle}" />
                <ListBox MaxWidth="800"
                         MaxHeight="400"
                         Margin="6"
                         SelectionMode="Single"
                         SelectedItem="{Binding ElementName=Root,Path= PromptString,Mode=TwoWay}"
                         ItemsSource="{Binding ElementName=Root,Path=Source,Mode=OneWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type system:String}">
                            <TextBlock TextWrapping="Wrap"
                                       TextTrimming="WordEllipsis"
                                       Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!--<Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        Content="{materialDesign:PackIcon Kind=Add,Size=16}"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        ToolTipService.InitialShowDelay="0"
                        ToolTip="Add to system prompt resources"
                        Width="23"
                        Height="23"
                        Margin="6" />-->
            </Grid>
        </HeaderedContentControl>
    </UserControl.Resources>
    <materialDesign:SplitButton PopupElevation="Dp6"
                                Margin="0"
                                Height="50"
                                Padding="10,4"
                                PopupUniformCornerRadius="6"
                                Command="{Binding }"
                                Style="{StaticResource MaterialDesignFlatSplitButton}">
        <materialDesign:SplitButton.Content>
            <TextBlock TextWrapping="Wrap"
                       Text="{Binding  ElementName=Root,Path=PromptString,Mode=OneWay}" />
        </materialDesign:SplitButton.Content>
        <materialDesign:SplitButton.PopupContent>
            <TextBlock Text="{Binding ElementName=Root,Path=PromptString,Mode=OneWay}" />
        </materialDesign:SplitButton.PopupContent>
    </materialDesign:SplitButton>
</UserControl>