<UserControl x:Class="LLMClient.Component.CreateSessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LLMClient.Component"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:converters="clr-namespace:LLMClient.Component.Converters"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700"
             d:DataContext="{d:DesignInstance local:CreateSessionViewModel}">
    <UserControl.Resources>
        <converters:ListToStringConverter x:Key="StringToListConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0"
                        Height="450"
                        ContentTemplate="{StaticResource FullModelSelectionDataTemplate}"
                        Content="{Binding ModelSelection,Mode=OneTime}"
                        Visibility="{Binding ModelSelectionEnable,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}" />
        <TabControl Grid.Row="1"
                    TabStripPlacement="Bottom"
                    HorizontalContentAlignment="Left"
                    SelectedIndex="{Binding SelectedIndex,Mode=TwoWay}">
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Forum"
                                                 Width="18"
                                                 Height="18"
                                                 VerticalAlignment="Center" />
                        <TextBlock Margin="10,0,0,0">Dialog</TextBlock>
                    </DockPanel>
                </TabItem.Header>
                <DockPanel Margin="10">
                    <TextBlock Text="Topic:"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}" />
                    <TextBox Text="{Binding DialogTitle,Mode=TwoWay}"
                             TextWrapping="NoWrap"
                             Margin="10,0"
                             AcceptsReturn="False"
                             AcceptsTab="False" />
                </DockPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <iconPacks:PackIconMaterialDesign Kind="Workspaces"
                                                          Width="18"
                                                          Height="18" />
                        <TextBlock Margin="10,0,0,0"
                                   VerticalAlignment="Center">
                            Project
                        </TextBlock>
                    </DockPanel>
                </TabItem.Header>
                <ContentPresenter Content="{Binding Project,Mode=OneWay}"
                                  ContentTemplate="{StaticResource ProjectConfigDataTemplate}"
                                  Margin="10" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <materialDesign:PackIcon Kind="CloudSearch"
                                                 Width="18"
                                                 Height="18" />
                        <TextBlock Margin="10,0,0,0">Research</TextBlock>
                    </DockPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1"
                Content="确认"
                Margin="0,10,0,10"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Command="{Binding CreateSessionCommand,Mode=OneWay}"
                Width="90" />
    </Grid>
</UserControl>