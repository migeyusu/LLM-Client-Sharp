<UserControl x:Class="LLMClient.Component.UsageStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:LLMClient.Component.ViewModel"
             xmlns:chart="clr-namespace:LLMClient.Component.Chart"
             xmlns:converters="clr-namespace:LLMClient.Component.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:UsageStatisticsViewModel}">
    <UserControl.Resources>
        <chart:UsageStatsTooltip x:Key="UsageStatsTooltip" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left sidebar: banner controls stacked with legend -->
        <StackPanel Grid.Column="0" Margin="10" Width="300">
            <TextBlock Text="Usage Statistics"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal"
                        Margin="0,12,0,0">
                <ListBox Margin="0,0,0,0"
                         ItemsPanel="{StaticResource HorizontalItemsPanelTemplate}"
                         Style="{StaticResource MaterialDesignToolToggleListBox}"
                         SelectedIndex="{Binding  CriteriaIndex,Mode=TwoWay}">
                    <ListBoxItem ToolTip="Group by Model">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cube" />
                                <TextBlock Text="Models"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem ToolTip="Group by Server">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Server" />
                                <TextBlock Text="Endpoints"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem ToolTip="Group by Series">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="VectorCombine" />
                                <TextBlock Text="Series"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <ToggleButton IsChecked="{Binding IsPieChart}"
                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                              ToolTip="Toggle Chart Type (Bar/Pie)" Margin="0,0,8,0">
                    <materialDesign:PackIcon Kind="ChartPie" />
                </ToggleButton>
                <TextBlock Text="Pie Chart Mode" VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="{Binding MaxItemsCount,Mode=OneWay,StringFormat=Show Top {0} Items By CallTimes}"
                       VerticalAlignment="Center"
                       Margin="0,8,0,0" />
            <Slider Maximum="20"
                    Minimum="5"
                    Margin="0,8,0,0"
                    VerticalAlignment="Center"
                    AutoToolTipPlacement="BottomRight"
                    TickFrequency="1"
                    TickPlacement="BottomRight"
                    Value="{Binding MaxItemsCount,Mode=TwoWay}" />

            <Border Margin="0,12,0,0" Padding="10"
                    BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Legend,Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <Border Width="12" Height="12" CornerRadius="2" Margin="0,0,8,0"
                                            Background="{Binding HexColor}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>
        <Button Grid.Column="0"
                Command="{Binding RefreshCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="28"
                Height="28"
                ToolTip="Refresh Data">
            <materialDesign:PackIcon Kind="Refresh" />
        </Button>

        <!-- Close button anchored to top-right of charts area -->
        <Button Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Style="{StaticResource PopupCloseButtonStyle}" />

        <!-- Charts area -->
        <Grid Grid.Column="1" Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Completion Tokens -->
            <Border Grid.Row="0" Grid.Column="0" Margin="5" BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="10,5">
                        <Run>Completion Tokens</Run>
                        <Run
                            Text="{Binding TotalCompletionTokens,Mode=OneWay,StringFormat=：{0} @Total,Converter={x:Static converters:SnapConverters.FluentTokensToStringConverter}}" />
                    </TextBlock>
                    <ContentControl Grid.Row="1">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <lvc:CartesianChart Series="{Binding CompletionTokensSeries}"
                                                            Tooltip="{StaticResource UsageStatsTooltip}"
                                                            Background="Transparent">
                                            <lvc:CartesianChart.XAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis SeparatorsPaint="#dcdcdc" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.XAxes>
                                            <lvc:CartesianChart.YAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis IsVisible="False" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.YAxes>
                                        </lvc:CartesianChart>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPieChart}" Value="True">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <lvc:PieChart Series="{Binding CompletionTokensSeries}"
                                                              Tooltip="{StaticResource UsageStatsTooltip}"
                                                              Background="Transparent" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </Border>

            <!-- Call Times -->
            <Border Grid.Row="0" Grid.Column="1" Margin="5" BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="10,5">
                        <Run Text="Call Times" />
                        <Run Text="{Binding TotalCallTimes,Mode=OneWay,StringFormat=：{0} @Total}" />
                    </TextBlock>
                    <ContentControl Grid.Row="1">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <lvc:CartesianChart Series="{Binding CallTimesSeries}"
                                                            Tooltip="{StaticResource UsageStatsTooltip}"
                                                            Background="Transparent">
                                            <lvc:CartesianChart.XAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis SeparatorsPaint="#dcdcdc" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.XAxes>
                                            <lvc:CartesianChart.YAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis IsVisible="False" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.YAxes>
                                        </lvc:CartesianChart>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPieChart}" Value="True">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <lvc:PieChart Series="{Binding CallTimesSeries}"
                                                              Tooltip="{StaticResource UsageStatsTooltip}"
                                                              Background="Transparent" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </Border>

            <!-- Price -->
            <Border Grid.Row="1" Grid.Column="0" Margin="5" BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="10,5">
                        <Run Text="Price" />
                        <Run Text="{Binding  TotalPrice,Mode=OneWay,StringFormat=：{0:N3}$ @Total}" />
                    </TextBlock>
                    <ContentControl Grid.Row="1">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <lvc:CartesianChart Series="{Binding PriceSeries}"
                                                            Tooltip="{StaticResource UsageStatsTooltip}"
                                                            Background="Transparent">
                                            <lvc:CartesianChart.XAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis SeparatorsPaint="#dcdcdc" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.XAxes>
                                            <lvc:CartesianChart.YAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis IsVisible="False" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.YAxes>
                                        </lvc:CartesianChart>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPieChart}" Value="True">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <lvc:PieChart Series="{Binding PriceSeries}"
                                                              Tooltip="{StaticResource UsageStatsTooltip}"
                                                              Background="Transparent" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </Border>

            <!-- Average TPS -->
            <Border Grid.Row="1" Grid.Column="1" Margin="5"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="10,5">
                        <Run Text="Average TPS" />
                        <Run Text="{Binding MeanAvgTps,Mode=OneWay,StringFormat=：{0:N0} @Mean}" />
                    </TextBlock>
                    <ContentControl Grid.Row="1">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <lvc:CartesianChart Series="{Binding AverageTpsSeries}"
                                                            Tooltip="{StaticResource UsageStatsTooltip}"
                                                            Background="Transparent">
                                            <lvc:CartesianChart.XAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis SeparatorsPaint="#dcdcdc" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.XAxes>
                                            <lvc:CartesianChart.YAxes>
                                                <lvc:AxesCollection>
                                                    <lvc:XamlAxis IsVisible="False" />
                                                </lvc:AxesCollection>
                                            </lvc:CartesianChart.YAxes>
                                        </lvc:CartesianChart>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>