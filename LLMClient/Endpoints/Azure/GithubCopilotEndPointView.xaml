<UserControl x:Class="LLMClient.Endpoints.Azure.GithubCopilotEndPointView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:azure="clr-namespace:LLMClient.Endpoints.Azure"
             xmlns:models="clr-namespace:LLMClient.Endpoints.Azure.Models"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance azure:GithubCopilotEndPoint}"
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition />
                <ColumnDefinition Width="90" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Text="API Token："
                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                       VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding Option.APIToken,Mode=TwoWay}"
                     Margin="15,0" />
            <TextBlock Grid.Row="0" Grid.Column="2" Text="API URL："
                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                       VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="3"
                     Text="{Binding Option.URL,Mode=TwoWay}" />
        </Grid>

        <ListView Grid.Row="1"
                  Margin="0,10"
                  ItemsSource="{Binding TotalModelsInfos, Mode=OneWay}"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem"
                       BasedOn="{StaticResource MaterialDesignGridViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                    <Setter Property="Height"
                            Value="50" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}"
                               BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
                            <Setter Property="Height"
                                    Value="60" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="图标" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type models:AzureModelInfo}">
                                <Image Width="32"
                                       Height="32"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Source="{Binding Icon.CurrentSource,Mode=OneWay}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding FriendlyName}" Width="200" />
                    <GridViewColumn Header="最大输入Token"
                                    DisplayMemberBinding="{Binding MaxInputTokens}" Width="160" />
                    <GridViewColumn Header="最大输出Token" DisplayMemberBinding="{Binding MaxOutputTokens}" Width="160" />
                    <GridViewColumn Header="已启用" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type models:AzureModelInfo}">
                                <CheckBox HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          materialDesign:CheckBoxAssist.CheckBoxSize="20"
                                          IsChecked="{Binding IsEnabled, Mode=OneTime}"
                                          IsHitTestVisible="False" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>