<Window x:Class="LLMClient.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:test="clr-namespace:LLMClient.Test"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance test:TestWindow}"
        Title="TestWindow" Height="800" Width="1200">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 顶部工具栏 -->
                <Border Grid.Row="0" Background="#2d2d3d" Padding="12">
                        <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🌿 Conversation Branches" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <Rectangle Width="1" Fill="#444" Margin="20,0"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Fill="#3b82f6" Margin="0,0,6,0"/>
                                        <TextBlock Text="User" Foreground="#aaa" Margin="0,0,16,0"/>
                                        <Ellipse Width="12" Height="12" Fill="#10b981" Margin="0,0,6,0"/>
                                        <TextBlock Text="Assistant" Foreground="#aaa"/>
                                </StackPanel>
                        </StackPanel>
                </Border>       

                <!-- 树形视图区域 -->
                <ScrollViewer Grid.Row="1" 
                              PanningMode="Both"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Background="#f5f5f5">
                        <test:BranchTreeControl x:Name="BranchTree"
                                                    MinWidth="800"
                                                    MinHeight="600"/>
                </ScrollViewer>
        </Grid>

</Window>